<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_location_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.tata.diangi.LocationDetailActivity"
    tools:showIn="@layout/activity_location_detail">
    <include layout="@layout/content_location_detail_row" />

    <RelativeLayout
    android:layout_marginTop="170dp"
    android:layout_width="match_parent"
    android:layout_height="300dp">

        <ImageView
            android:id="@+id/content_location_detail_Icon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/content_location_detail_TempText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/content_location_detail_City"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/content_location_detail_Icon"
            android:gravity="center"
            android:hint="xx Celcius"
            android:textSize="35dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/content_location_detail_CloudText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/content_location_detail_Icon"
            android:layout_marginTop="10dp"
            android:text="Cloud: "
            android:textSize="20dp" />

        <TextView
            android:id="@+id/content_location_detail_HumidText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/content_location_detail_CloudText"
            android:layout_marginTop="10dp"
            android:text="Humidity: "
            android:textSize="20dp" />


        <TextView
            android:id="@+id/content_location_detail_City"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="City Name"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/content_location_detail_TempText"
            android:layout_alignStart="@+id/content_location_detail_TempText"
            android:layout_marginLeft="17dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="33dp" />



    </RelativeLayout>


</RelativeLayout>
